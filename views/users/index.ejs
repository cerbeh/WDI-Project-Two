
<div class="columns is-multiline is-centered">
  <div class="column is-11 box page-head">
    <h2>Users Index</h2>
  </div>
  <% users.forEach(user => { %>
    <div class="column is-one-fifth-desktop is-half-tablet">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
          <img src="<%= user.profile.image %>" alt="<%= user.profile.firstName %>">
          </figure>
        </div>
        <div class="card-content description-box">
          <div class="content">
            <h4 class="title is-4">
              <a href="/users/<%=user._id%>"><%= user.profile['firstName'] %> <%= user.profile['secondName']%></a>
              </h4>
              <p class="user-description">
              <%= user.profile['description'] %>
              </p>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
