<h2>Create Page</h2>
<% Object.keys(template).forEach(key => { %>
  <li><%= key %></li>
<% }) %>
<form action="/events" method="post">
  <div class="field">
    <label class="label">Event Name</label>
    <div class="control">
      <input type="text" name="name" class="input">
    </div>
  </div>
  <div class="field is-horizontal">
      <label class="control">Venue</label>
    <div class="select is-multiple">
      <select multiple size="<% locals.currentUser.venues.length%>" name="venue">
        <% locals.currentUser.venues.forEach(venue => { %>
          <option value="<%=venue %>"><%= venue %></option>
        <% }) %>
      </select>
    </div>
  </div>
  <div class="field">
    <label class="control">Image</label>
    <input type="text" name="image" class="input">
  </div>
  <div class="field">
    <label class="label">Description</label>
    <textarea name="description" rows="8" cols="80"></textarea>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
    <div class="control">
      <button class="button is-text">Cancel</button>
    </div>
  </div>
</form>
