<h2>Event Page</h2>

<h2><%= event.name %></h2>
<h2><a href="../venues/<%= event.venue.id %>"><%= event.venue.name %></a></h2>
<div class="columns is-multiline">
  <div class="column is-half-desktop">
    <img src="<%= event.image %>" alt="<%= event.name %>">
  </div>
  <div class="column">
    <p>
      <%= event.description %>
    </p>
    <% if (locals.isLoggedIn) { %>
      <div class="field is-grouped">
        <a href="/events/<%= event._id %>/edit">Edit</a>
        <form action="/events/<%= event.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button name="button">Delete</button>
        </form>
      </div>
    <% } %>
  </div>
  <div class="column">
    <h3>Comments:</h3>
    <ul>
      <% event.comments.forEach(comment => { %>
        <li><%= comment.content %></li>
        <li><%= comment.creator %></li>
      <% }) %>
    </ul>
    <% if (locals.isLoggedIn) { %>
      <form method="POST" action="/events/<%= event._id %>/comments">
        <textarea name="content" required></textarea>
        <button>Submit</button>
      </form>
    <% } %>
  </div>
  <div class="column">
    <form action="/events/<%= event._id %>/attending" method="post">
      <button name="attending">Attending</button>
    </form>
    <div class="level">
      <ul>
        <% event.attendees.forEach(key => { %>
          <li><%= key.profile.firstName %><%= key.profile.secondName %>
        <% }) %> </li>
        <li>Word</li>
      </ul>
    </div>
  </div>
</div>
