<form action="/venues/<%= venue._id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="field">
    <label class="label">Name</label>
      <div class="control">
        <input type="text" class="input" value="<%= venue.name %>">
      </div>
  </div>
  <div class="field">
    <label classs="label">Capacity</label>
      <div class="control">
        <input type="text" class="input" name="capacity" value="<%= venue.capacity %>">
      </div>
  </div>
  <div class="field">
    <label classs="label">Location</label>
      <div class="control">
        <input type="text" class="input" name="location" value="<%= venue.location %>">
      </div>
  </div>
  <div class="field">
    <label classs="label">Image</label>
      <div class="control">
        <input type="text" class="input" name="image" value="<%= venue.image %>">
      </div>
  </div>
  <div class="field">
    <label classs="label">Description</label>
      <div class="control">
        <textarea name="description" rows="8" cols="80"><%= venue.description %></textarea>
      </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
    <div class="control">
      <button class="button is-text">Cancel</button>
    </div>
  </div>
</form>
