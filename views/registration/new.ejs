<h2>New User</h2>

<form action="/registration" method="POST">
  <% Object.keys(template).forEach(key => { %>
    <div class="field">
      <label class="label"><%= key.toUpperCase()%></label>
      <div class="control">
      <% if (key === 'profile') { %>


        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Question</label>
          </div>

          <div class="field-body">
            <div class="field">
              <div class="control">
                <input type="text" class="input" name="<%= element %>">
              </div>
            </div>
          </div>
        </div>


        <% Object.keys(template.profile).forEach((element) => { %>
          <label class="label"><%= element.toUpperCase() %></label>
          <% if (element === 'firstName' || element === 'secondName' || element === 'image') { %>

            <input type="text" class="input" name="<%= element %>">

          <% } else if (element === 'DOB') { %>

            <input type="date" class="input" name="<%= element %>">

          <% } else { %>

            <textarea name="<%= element %>" rows="10" columns="80"></textarea>

          <% }%>
        <% }) %>
      </div>
    </div>
  <% } else if(key === 'password') { %>
    <input type="text" class="input" name="<%= key %>">
    <label class="label">PASSWORD CONFIRMATION</label>
    <input type="text" class="input" name="password-confirmation">
    <% } else { %>
      <input type="text" class="input" name="<%= key %>">
  <% } %>
  <% }) %>
  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
    <div class="control">
      <button class="button is-text">Cancel</button>
    </div>
  </div>
</form>
